<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="hahu.pmtool.controller.Approval"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:form="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="{i18n>Label.approval.title}" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<form:SimpleForm id="newideaForm"
			            editable="true"
			            title="{i18n>appLogin}"
						layout="ResponsiveGridLayout"
						labelSpanXL="4"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="0"
						emptySpanL="4"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false"
						ariaLabelledBy="Title1">
			            <form:content>
							<Label text="{i18n>Label.approval.isaccepted}" />
							<CheckBox
								id="isaccepted"
								selected="{pmtool>IsAccepted}" />
							<Label text="{i18n>Label.approval.isacceptedwithconditions}" />
							<CheckBox
								id="isacceptedwithconditions"
								selected="{pmtool>IsAcceptedWithConditions}" />
							<Label text="{i18n>Label.approval.isprojectbonusaccepted}" />
							<CheckBox
								id="isprojectbonusaccepted"
								selected="{pmtool>IsProjectBonusAccepted}" />
							<Label text="{i18n>Label.approval.isdeclined}" />
							<CheckBox
								id="isdeclined"
								selected="{pmtool>IsDeclined}" />
							<Label text="{i18n>Label.approval.comments}" />
							<TextArea
								id="comments"
								value="{pmtool>Comments}"
								placeholder="{i18n>PlaceHolderHintMax1000Chars}"
								rows="5"
								maxLength="1000"
								width="100%" />
							<Label />
							<Button
								id="approval"
		                    	text="{i18n>appLogin}"
		                    	press="onApproval" />
			            </form:content>
			        </form:SimpleForm>
				</content>
				<List id="approvalList" />
			</Page>
		</pages>
	</App>
</mvc:View>