<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        id="newprojectDialog"
        contentWidth="800px"
        title="{i18n>Label.dialog.title}">
        <core:Icon
            src="sap-icon://hello-world"
            size="4rem"
            class="sapUiMediumMargin" />
        <form:SimpleForm id="newideaForm"
            minWidth="1024"
            editable="true"
            layout="ResponsiveGridLayout"
            title="{i18n>Label.dialog.form.title}"
            labelSpanXL="6"
            labelSpanL="6"
            labelSpanM="4"
            labelSpanS="4"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="2">
            <form:content>
                <Label text="{i18n>Label.dialog.projecttitle}" required="true" />
                <Input
                    id="titleInput"
                    type="Text"
                    placeholder="{i18n>PlaceHolder.title}" />
                <Label text="{i18n>Label.dialog.criteria}" required="true" />
                <RadioButtonGroup id="RG1"
                    columns="1">
                    <buttons>
                        <RadioButton id="optionA" text="{i18n>Label.dialog.criteria.option}" select="onOptionSelected" />
                        <RadioButton id="optionB" text="{i18n>Label.dialog.criteria.option2}" select="onOptionSelected" />
                        <RadioButton id="optionC" text="{i18n>Label.dialog.criteria.option3}" select="onOptionSelected" />
                    </buttons>
                </RadioButtonGroup>
                <Label text="{i18n>Label.dialog.criteria2}" required="true" />
                <RadioButtonGroup id="RG2"
                    columns="1">
                    <buttons>
                        <RadioButton id="optionD" text="{i18n>Label.dialog.criteria2.option}" select="onOptionSelected" />
                        <RadioButton id="optionE" text="{i18n>Label.dialog.criteria2.option2}" select="onOptionSelected" />
                        <RadioButton id="optionF" text="{i18n>Label.dialog.criteria2.option3}" select="onOptionSelected" />
                    </buttons>
                </RadioButtonGroup>
                <Label text="{i18n>Label.dialog.description}" />
                <Text id="resultArea" />
            </form:content>
        </form:SimpleForm>
        <!-- Hidden list -->
        <List id="newprojectList" visible="false" />
        <List id="resourceList" visible="false" />
        <buttons>
            <Button text="{i18n>Button.dialog.create}" press="onSave" type="Accept" />
            <Button text="{i18n>Button.dialog.cancel}" press="onCloseDialog" type="Reject" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>