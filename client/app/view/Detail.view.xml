<mvc:View
    controllerName="hahu.pmtool.controller.Detail"
    xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified">
	<Page
        id="page1"
        title="{i18n>Label.detail.title}: {/UserName}"
        enableScrolling="false"
        showNavButton="{device>/system/phone}"
        navButtonPress="onNavBack">
        <IconTabBar
			id="idIconTabBar"
			select="handleIconTabBarSelect"
			class="sapUiResponsiveContentPadding"
			stretchContentHeight="true">
			<items>
				<IconTabFilter
					id="factData"
					icon="sap-icon://approvals"
					iconColor="Neutral"
					text="{i18n>Label.detail.facts}"
					key="resources">
					<ScrollContainer
						height="100%"
						width="100%"
						horizontal="false"
						vertical="true">
						<form:SimpleForm id="factsForm"
							editable="true"
							title=""
							layout="ResponsiveGridLayout"
							labelSpanXL="4"
							labelSpanL="3"
							labelSpanM="4"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="0"
							emptySpanL="4"
							emptySpanM="0"
							emptySpanS="0"
							columnsXL="2"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false"
							ariaLabelledBy="Title1">
							<form:content>
								<core:Title text="{i18n>Label.detail.facts.title}" />
								<Label text="{i18n>Label.detail.facts.costs}" />
								<TextArea
									value="{/Id}"
									editable="false"
									placeholder="{i18n>PlaceHolder.max1000chars}"
									rows="5"
									maxLength="1000"
									width="100%" />
								<Label text="{i18n>Label.detail.facts.hours}" />
								<TextArea
									value="{/UserName}"
									editable="false"
									placeholder="{i18n>PlaceHolder.max1000chars}"
									rows="5"
									maxLength="1000"
									width="100%" />
								<Label text="{i18n>Label.detail.facts.comments}" />
								<TextArea
									value="{/DateOfEntry}"
									editable="false"
									placeholder="{i18n>PlaceHolder.max1000chars}"
									rows="5"
									maxLength="1000"
									width="100%" />
							</form:content>
						</form:SimpleForm>
					</ScrollContainer>
				</IconTabFilter>
			</items>
		</IconTabBar>
    </Page>
</mvc:View>